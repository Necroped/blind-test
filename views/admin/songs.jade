h1 Songs

#dz-root(style='display:none')
#musicPlayer.col-md-12
  .trackinfos
    span#trackname
  .btn-group(role='group', aria-label='...')
    button.btn.btn-default(type='button' onclick='Musicplayer.prev()')
      span.glyphicon.glyphicon-step-backward(aria-hidden='true')
    button.btn.btn-default(type='button' onclick='Musicplayer.pause()')
      span.glyphicon.glyphicon-pause(aria-hidden='true')
    button.btn.btn-default(type='button' onclick='Musicplayer.play()')
      span.glyphicon.glyphicon-play(aria-hidden='true')
    button.btn.btn-default(type='button' onclick='Musicplayer.next()')
      span.glyphicon.glyphicon-step-forward(aria-hidden='true')


button.btn.btn-primary(type='button' data-toggle='modal' data-target='#songsModal') Manage songs

#songsModal.modal(tabindex='-1' role='dialog' aria-labelledby='songManager' aria-hidden='true')
  .modal-dialog.modal-lg(role='document')
    .modal-header
      input#search_song_input.form-control(type='text' placeholder='Search song' aria-label='Search song')
    .modal-content
      .modal-body
        table.table.table-hover.table-striped.table-bordered#searchSongsTable(style='width:100%' cellspacing='0')
          thead
            tr
              th Cover
              th Title
              th Artist
              th Songs

table.table.table-hover.table-striped.table-bordered#songsTable(style='width:100%' cellspacing='0')
  thead
    tr
      th Cover
      th Title
      th Artist
      th Songs